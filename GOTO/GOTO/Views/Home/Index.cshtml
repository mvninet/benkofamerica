<div id="applicationWrapper" class="col-12 d-flex flex-fill justify-content-center">

    <div id="progressbarWrapper" class="col-12">
        <ul class="progressbar">
            <li class="active">Search</li>
            <li>Results</li>
            <li>Pay</li>
            <li>Receipt</li>
        </ul>
    </div>

    <div id="mainPage" class="navigationPage">
        <div class="col-xs-12 col-sm-12 d-flex justify-content-center">
            <img src="~/Frontend/Images/rq9MmY0.png" />
        </div>
        <div id="SearchFrom" class="col-xs-12 col-sm-12 d-flex justify-content-center" style="margin-top: 20px;"></div>
        <div class="col-xs-12 col-sm-12 d-flex justify-content-center" style="margin-top: 20px;">
            <img class="pic32" src="~/Frontend/Images/circus-camel.svg" style="transform: scaleX(-1);"/>
        </div>
        <div id="SearchTo" class="col-xs-12 col-sm-12 d-flex justify-content-center"></div>
        <div id="parcelData" class="col-xs-12 col-sm-12 d-flex flex-column justify-content-center" style="margin-top: 20px;"></div>
        <div id="parcelType" class="col-12 d-flex justify-content-center" style="margin-top: 20px;"></div>
        <div class="col-xs-12 col-sm-12 d-flex justify-content-center">
            <button class="btn btn-success col-xs-12 col-sm-12 d-flex justify-content-center" onclick="openMap()">Open map</button>
        </div>
        <div class="col-xs-12 col-sm-12 d-flex justify-content-center" style="margin: 10px 0 70px;">
            <button class="btn btn-success col-xs-12 col-sm-12 d-flex justify-content-center" onclick="GetReadyToSearch()">Search</button>
        </div>


    </div>
    
    <div id="mapPage" style="height: 100vh;width: 100vw;position: absolute;top: 0;background-color: white; display: none">
        <div class="col-xs-12 row col-sm-12 d-flex justify-content-center">
            <div class="row d-flex flex-fill col-sm-12 col-xs-12">
                <div class="col-12 d-flex flex-fill justify-content-center p-0">
                    <button class="btn btn-basic w-100 mt-1" onclick="closeMap()">Go back</button>
                </div>
            </div>
            <div class="col-xs-10 row col-sm-8 d-flex justify-content-center" style="margin-top: 20px;">
                <img src="~/Frontend/Images/190511_frikanthtikotona1.jpg" />
            </div>
        </div>
     </div>

    <div id="resultPage" class="navigationPage">
        <div id="routeOverviewWrapper" class="col-xs-12 col-sm-12">
            <p>Template From To destination</p>
        </div>
        <div class="col-xs-12 col-sm-12">
            <h3>Routes</h3>
            <div id="routeListWrapper">
            </div>
        </div>
    </div>
    <div id="paymentPage" class="navigationPage">
        <div id="paymentOverviewWrappper" class="col-xs-12 col-sm-12">
            <p>Template From To destination</p>
        </div>
        <div id="tos" class="col-xs-12 col-sm-12 mt-4">
            <p>Terms and Conditions</p>
        </div>
        <div id="paymentwrapper"class="col-xs-12 col-sm-12 mt-4">
            <p>Payment</p>
        </div>
        <div class="col-xs-12 col-sm-12 d-flex justify-content-center" style="margin-top: 20px">
            <button class="btn btn-success w-100" onclick="GetReadyForReceipt()">Pay</button>
        </div>
    </div>
    <div id="confirmationPage" class="navigationPage"></div>
    <div class="hiddenField" style="height: 20px"></div>
</div>

<!-- From inputfield - Search page -->
<template id="fromSearch">
    <div class="col-xs-10 col-sm-8 input-effect">
        <input id="autoFrom" class="effect-17 col-11" type="text" placeholder="" style="margin-left: 30px; margin-top: 3px">
        <label>From</label>
        <span class="focus-border"></span>
    </div>
</template>

<!-- To inputfield - Search page -->
<template id="toSearch">
    <div class="col-xs-10 col-sm-8 input-effect">
        <input id="autoTo" class="effect-17 col-11" type="text" placeholder="" style="margin-left: 30px; margin-top: 2px">
        <label>To</label>
        <span class="focus-border"></span>
    </div>
</template>

<template id="ParcelType">
    <div class="col-10">
        <div class="row d-flex justify-content-center align-items-center">
            <input id="livestock" type="radio" name="type"/> <img class="popoverIcon1" src="~/Frontend/Images/cow-light.svg" style="width: 25px; height: 25px;" data-toggle="popover" title="Livestock" data-placement="top" data-content="Are you shipping any live animals?"/>
            <input id="fragile" type="radio" name="type" style="margin-left: 15px;"/> <img class="popoverIcon2" src="~/Frontend/Images/fragile-light.svg" style="width: 25px; height: 25px;" data-toggle="popover" data-placement="top" title="Fragile" data-content="Does your parcel need to be kept cool?"/>
        </div>
        <div class="row d-flex justify-content-center align-items-center" style="margin-top: 20px;">
            <input id="refridge" type="radio" name="type"/> <img class="popoverIcon3" src="~/Frontend/Images/snowflake-light.svg" style="width: 25px; height: 25px;" data-toggle="popover" title="Refrigiated" data-placement="top" data-content="Do we need to handle the parcel with care?"/>
            <input id="recorded" type="radio" name="type" style="margin-left: 15px;"/> <img class="popoverIcon4" src="~/Frontend/Images/map-marker-alt-light.svg" style="width: 25px; height: 25px;" data-toggle="popover" data-placement="top" title="Recorded package" data-content="Do you need to get a signature for the delivery?"/>
        </div>
        
        <p class="row d-flex justify-content-center" style="font-style: italic;">If an icon has not been selected the parcel type will be choosed as a standard type - click on the icons to see informations about the type</p>

    </div>
</template>

<template id="ParcelData">
    <div class="row d-flex justify-content-center">
        <div class="col-10 col-xs-12 d-flex justify-content-center" style="height: 40px;">
            <img src="~/Frontend/Images/weight-hanging-solid.svg" class="pic32 d-flex justify-content-center" /><input class="effect-8 col-xs-10 col-sm-8" id="weight" type="number" placeholder="Weight"> 
            <span class="focus-border">
                <i></i>
            </span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-10 d-flex align-items-center justify-content-center mt-1">
            <img src="~/Frontend/Images/arrows-alt-v-solid.svg" class="pic32" /> <input class="effect-8 col-3" id="Height" type="number" placeholder="Height">
            <img style="transform: rotate(90deg);" src="~/Frontend/Images/arrows-alt-v-solid.svg" class="pic32" /><input class="effect-8 col-3" id="Width" type="number" placeholder="Width">
            <img style="transform: rotate(45deg);" src="~/Frontend/Images/arrows-alt-v-solid.svg" class="pic32" /> <input class="effect-8 col-3" id="Depth" type="number" placeholder="Depth">
            <span class="focus-border">
                <i></i>
            </span>
        </div>
    </div>
</template>

<!-- Result List -->
<template id="routeWrapperTemplate"> 
    <div class="routeWrapper col-12">
        <a onclick="chooseRoute(this.parentElement)"><span class="link-spanner"></span></a>
        <div class="routeWrapperUpper">
            <img style="margin-top: 2px;" id="iconResult"/>
            <h2></h2>
        </div>
        <div class="routeWrapperLower">
            <div class="col-6 routeWrapperTime">
                <img src="~/Frontend/Images/clock-regular.svg" />
                <span class="routeTime"></span>
            </div>
            <div class="col-6 routeWrapperTime">
                <img  src="~/Frontend/Images/dollar-sign-solid.svg" />
                <span class="routePrice"></span>
            </div>
        </div>
    </div>
</template>

<template id="searchingRouteWrapperTemplate">
    <div class="routeWrapper searchingRouteWrapper col-12">
        <div class="animation text-center">
            <p style="padding-top: 40px;">We're fetching you're results.</p>
            <p>Please hold on...</p>
        </div>
        <div class="routeWrapperUpper">
            <h2>&nbsp;</h2>
        </div>
        <div class="routeWrapperLower">
            <div class="col-6 routeWrapperTime">
                <p>&nbsp;</p>
            </div>
            <div class="col-6 routeWrapperTime">
                <p>&nbsp;</p>
            </div>
        </div>
    </div>
</template>

<template id="paymentTemplate">
   
    <div class="col-12">
        <div class="row d-flex flex-fill">
            <input type="number" onchange="isCreditCardValid(this)" class="form-control col-12 creditcard" placeholder="Creditcard number"/>
        </div>
        <div class="row d-flex flex-fill pt-2">
            <div class="col-12 p-0 d-flex">
                <div class="col-6 p-0 d-flex">
                    <input type="number" maxlength="2" onchange="isNumberValid(this, 2)" class="form-control col-5 d-flex mr-1" placeholder="MM"/>
                    <span class="payment-slash">/</span>
                    <input type="number" maxlength="2" onchange="isNumberValid(this, 2)" class="form-control col-5 d-flex ml-1" placeholder="YY"/>
                </div>
                <div class="col-6 d-flex justify-content-end p-0">
                    <input type="number" maxlength="3" onchange="isNumberValid(this, 3)" class="form-control d-flex col-6" placeholder="CVC"/>
                </div>
            </div>
        </div>
    </div>
</template>

<!-- Succes page -->
<template id="succesTemplate">
    <div id="successWrapper" class="col-xs-12 col-sm-8 row d-flex justify-content-center">
        <div class="topWrapper col-12">
            <div class="row d-flex w-100 justify-content-center">
                <h2 class="d-flex justify-content-center">Success</h2>
            </div>
            <div class="d-flex w-100 justify-content-center align-items-center row">
                <img src="~/Frontend/Images/check-circle-solid.svg" style="color: green;" />
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <p>Thank you for placing an order with Telstar Logistics. Here is your Order ID for your records: <span class="successOrderId">ORDERID</span>. If you wish to place another order, please click the button below.</p>
        </div>
        <div class="confirmationText col-12 d-flex justify-content-center">
            <div id="routeResult" class="col-12" style="height: 50px;">
                <div style="text-align: center; font-size: 20px; margin-bottom: 10px;">
                    <span class="succesFrom"></span>
                    <img style="transform: scaleX(-1)" class="pic16" src="~/Frontend/Images/circus-camel.svg" />
                    <span class="succesTo"></span>
                </div>
                <div class="row d-flex justify-content-center">
                    <img src="~/Frontend/Images/clock-regular.svg" class="pic16" /><span class="succesTime" style="margin-right: 50px;"></span>
                    <img src="~/Frontend/Images/dollar-sign-solid.svg" class="pic16" /><span class="succesPrice"></span>
                </div>
                <br />
            </div>
        </div>

        <div class="bottomWrapper col-xs-12 col-sm-8 d-flex justify-content-center">
            <button class="btn btn-success col-12" onclick="ShowMainPage(true)" style="height: 50px">Ship another parcel</button>
        </div>
    </div>
</template>

<template id="routeOverviewTemplate">
    <div class="col-sm-12 col-xs-12">
        <div class="row d-flex flex-fill justify-content-center">
            <div class="col-4 destination d-flex flex-fill align-items-center justify-content-center">
                <span id="routeFrom" class="from"></span>
            </div>
            <div class="col-4 d-flex flex-fill align-items-center justify-content-center">
                <img class="camel" src="~/Frontend/Images/circus-camel.svg" style="transform: scaleX(-1);">
            </div>
            <div class="col-4 destination d-flex flex-fill align-items-center justify-content-center">
                <span id="routeTo" class="to"></span>
            </div>
            <div class="row d-flex flex-fill col-sm-12 col-xs-12 p-0">
                <div class="col-12 d-flex flex-fill justify-content-center p-0">
                    <button class="btn btn-basic w-100 mt-1" onclick="ShowMainPage()">Change route</button>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="paymentOverviewTemplate">
    <div class="col-12">
        <div class="row d-flex flex-fill">
            <div class="col-4 destination d-flex flex-fill align-items-center justify-content-center">
                <span id="paymentFrom" class="from">From:</span>
            </div>
            <div class="col-4 d-flex flex-fill align-items-center justify-content-center">
                <img class="camel" src="~/Frontend/Images/circus-camel.svg" style="transform: scaleX(-1);">
            </div>
            <div class="col-4 destination d-flex flex-fill align-items-center justify-content-center">
                <span id="paymentTo" class="to">To:</span>
            </div>
        </div>
        <div class="row d-flex flex-fill">
            <div class="col-12 d-flex flex-fill justify-content-center p-0">
                <button class="btn btn-basic w-100 mt-1" onclick="ShowMainPage()">Change route</button>
            </div>
        </div>
    </div>
</template>

<template id="noRoutesFoundTemplate">
    <div class="routeWrapper" style="height:60px; line-height:40px;">
        <p class="text-center font-italic">We didn't find any routes. Try another route.</p>
    </div>
</template>

<template id="tosTemplste">
    <div class="col-xs-10 col-sm-8">
        <input type="checkbox"/> <a href="https://www.apple.com/ca/legal/internet-services/itunes/ca/terms.html" > I hereby agree to the terms of service</a>
    </div>
    
    <div class="col-12">
        <p style="font-style: italic; margin-top: 30px; font-size: 14px;">Format for creditcard number: 1234-1234-1234-1234</p>
    </div>

</template>

